<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @course.name %></span>
        <p>Short Name: <%= @course.short_name %></p>
        <p>Description: <%= @course.description %></p>
      </div>
    </div>  

    <% if current_user.email == "jonny@jonny.com" %>
      <div class="row">
        <div class="col s6">
          <%= link_to '<i class="material-icons right">create</i>Edit this course'.html_safe, edit_course_path(@course), class: "waves-effect waves-light btn" %> 
        </div>
        <div class="col s6">
          <%= link_to '<i class="material-icons right">delete</i>Delete this course'.html_safe, @course, method: :delete, class: "waves-effect waves-light btn red" %> 
        </div>
      </div>
    <% end %>

    <div class="row">
      <%= link_to "< Back", courses_path %>
    </div>
    
  </div>
</div>